@using Todolist.ViewModels
@model TasksVm
@{
    ViewBag.Title = "Todolist";
}
<script type="text/javascript" src="dataTables.scrollingPagination.js"></script>
<div class="alert alert-success alert-dismissible hide" id="Alert" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div id="InfoMessage"></div>
</div>
<br /><br />
<button type="button" class="btn btn-info" data-url="@Url.Action("Create")" id="AddTask">Add Task</button>
<br /><br />
<table id="Datatables" class="table table-striped table-bordered">
    <thead>
        <tr>
            <td class="sort" data-column="TaskDescription" data-descending="false">
                Описание задачи
            </td>
            <td class="sort" data-column="EnrollmentDate" data-descending="false">
                Дата
            </td>
            <td class="sort" data-column="Approved" data-descending="false">
                Статус
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody id="PartialContent">
        @Html.Partial("_PartialContent", Model)
    </tbody>
</table>
<div class="text-info">
    <h4>@ViewBag.Error</h4>
</div>
<div id="ModDialog" class="modal fade" role="dialog">
    <div id="DialogContent" class="modal-dialog">
    </div>
</div>
<script src="@Url.Content("~/Scripts/site.js")"></script>
<script src="@Url.Content("~/Scripts/datatables.min.js")"></script>
<script src="@Url.Content("~/Scripts/pagination-scrolling.js")"></script>
<script>
    initUrls('@Url.Action("PartialContent", "Todolist")', '@Url.Action("CheckCoincidences", "Todolist")');
</script>


