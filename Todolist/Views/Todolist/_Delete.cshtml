@using Todolist.ViewModels
@model TaskVm
@{
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        OnSuccess = "onSuccess",
        OnFailure = "onFailure"
    };
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@Model.Title</h4>
    </div>
    <div class="modal-body">
        <div class="form">
            <br />
            <p class="text-info">Do you really want to delete this?</p>
            <hr />
            <div class="form-group">
                <label for="EnrollmentDate">Created</label>
            </div>
            <div class="form-group">
                @Html.DisplayFor(m => m.EnrollmentDate)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TaskDescription)
            </div>
            <div class="form-group">
                @Html.DisplayFor(m => m.TaskDescription)
            </div>
            <br />
        </div>
    </div>
    <div class="modal-footer">
        @using (Ajax.BeginForm("Delete", "Todolist", FormMethod.Post, ajaxOptions, new { @class = "form", @id = "AjaxForm", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.TodolistId)
            <div class="form-group">
                <div id="Results" class="text-danger"></div>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <input type="submit" id="Submit" value="Delete" class="btn btn-danger" />
        }
    </div>
</div>
